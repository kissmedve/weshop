                      <input type="checkbox" name="{{_id}}" id="alkoholika" value="alkoholika" />
                      Alkoholika
                    </label>
                    <label for='sonstiges' class="checkbox">
                      <input type="checkbox" name="{{_id}}" id="sonstiges" value="sonstiges" />
                      Sonstiges
                    </label>

                  </div>

                  <div class="column is-4">
                    <label class="tag-group"><strong>Drogerie</strong></label>
                    <label for='hygiene' class="checkbox">
                      <input type="checkbox" name="{{_id}}" id="hygiene" value="hygiene" />
                      Hygiene
                    </label>
                    <label for='hautpflege' class="checkbox">
