<div class="container tagsedit">

  <section class="section">

    <div class="is-size-6">Edit</div>
    <h2 class="title is-size-4">Tags</h2>

    <form action="/tagsedit/:page" method="POST">

      {{#each product}}

      <div class="block">

        <div class="columns">

          <div class="column is-3">
