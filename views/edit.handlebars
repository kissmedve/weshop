<section class='section container editsingle'>
  <div class='is-size-6'>
    Edit
  </div>
  <h2 class='title is-size-4'>
    {{product.title}}
  </h2>

  <form action="/edit/{{product._id}}" method='POST'>
    <div class='block'>
      <!-- Price -->
      <div class='field'>
        <label for='price' class='label'>
          Price
        </label>
        <small>
          {{product.price}}
        </small>
        <div class='control'>
          <input class='input' type='text' name='price' id='price' />
        </div>
      </div>

      <!-- BasePrice -->
      <div class='field'>
        <label for='baseprice' class='label'>
          Base Price
        </label>
        <small>
          {{product.basePrice}}
        </small>
        <div class='control'>
          <input class='input' type='text' name='baseprice' id='baseprice' />
        </div>
      </div>
    </div>

    <!-- Tags (group) -->
    <div class='block'>
      <label for='tags' class='label'>
        Tags
      </label>

      <!-- Current Tags -->
      <div class='current-tags has-background-white-ter'>
        <label>
          Current Tags:
        </label>
        {{#each product.tags}}
          <span class='tag is-white is-normal'>
            {{this}}
          </span>
        {{/each}}
      </div>
      <div>
        <small>
          <strong>
            Check all tags you need, including the current ones!
          </strong>
        </small>
      </div>

      <!-- Tags -->

      <div class='columns'>
        <div class='column tags-edit-checkboxes'>
          <div class='field'>
            <div class='control'>
              <div class='columns'>
                <div class='column is-4'>
                  <label class='tag-group'>
                    <strong>
                      Allgemein
                    </strong>
                  </label>

                  <label for='egg' class='checkbox'>
                    <input type='checkbox' name='term' id='egg' value='egg' />
                    egg
                  </label>
                  <label for='ugo' class='checkbox'>
                    <input type='checkbox' name='term' id='ugo' value='ugo' />
                    ugo
                  </label>

                  <label for='lebensmittel' class='checkbox'>
                    <input
                      type='checkbox'
                      name='term'
                      id='lebensmittel'
                      value='lebensmittel'
                    />
                    Lebensmittel
                  </label>
                  <label for='drogerie' class='checkbox'>
                    <input
                      type='checkbox'
                      name='term'
                      id='drogerie'
                      value='drogerie'
                    />
                    Drogerie
                  </label>
                  {{! <label for='dm' class="checkbox">
                    <input type="checkbox" name="shop" id="dm" value="dm" />
                    DM
                  </label>
                  <label for='mytime' class="checkbox">
                    <input type="checkbox" name="shop" id="mytime" value="mytime" />
                    Mytime
                  </label>
                  <label for='rewe' class="checkbox">
                    <input type="checkbox" name="shop" id="rewe" value="rewe" />
                    Rewe
                  </label> }}
                </div>

                <div class='column is-4'>
                  <label class='tag-group'>
                    <strong>
                      Lebensmittel
                    </strong>
                  </label>
                  <label for='trockenvorraete' class='checkbox'>
                    <input
                      type='checkbox'
                      name='term'
                      id='trockenvorraete'
                      value='trockenvorraete'
                    />
                    Trockenvorraete
                  </label>
                  <label for='nuessetrockenobst' class='checkbox'>
                    <input
                      type='checkbox'
                      name='term'
                      id='nuessetrockenobst'
                      value='nuessetrockenobst'
                    />
                    Nüsse/Trockenobst
                  </label>

                  <label for='konserven' class='checkbox'>
                    <input
                      type='checkbox'
                      name='term'
                      id='konserven'
                      value='konserven'
                    />
                    Konserven
                  </label>
                  <label for='brotaufstrich' class='checkbox'>
                    <input
                      type='checkbox'
                      name='term'
                      id='brotaufstrich'
                      value='brotaufstrich'
                    />
                    Brotaufstrich
                  </label>
                  <label for='teekaffee' class='checkbox'>
                    <input
                      type='checkbox'
                      name='term'
                      id='teekaffee'
                      value='teekaffee'
                    />
