                  </label>
                  <label for='sonstiges' class='checkbox'>
                    <input
                      type='checkbox'
                      name='term'
                      id='sonstiges'
                      value='sonstiges'
                    />
                    Sonstiges
                  </label>
                </div>

                <div class='column is-4'>
                  <label class='tag-group'>
                    <strong>
                      Drogerie
                    </strong>
                  </label>
                  <label for='hygiene' class='checkbox'>
                    <input
                      type='checkbox'
                      name='term'
                      id='hygiene'
                      value='hygiene'
                    />
                    Hygiene
                  </label>
                  <label for='hautpflege' class='checkbox'>
                    <input
                      type='checkbox'
                      name='term'
                      id='hautpflege'
                      value='hautpflege'
                    />
                    Hautpflege
                  </label>
                  <label for='makeup' class='checkbox'>
                    <input
                      type='checkbox'
                      name='term'
                      id='makeup'
                      value='makeup'
                    />
                    Makeup
                  </label>
                  <label for='haarpflege' class='checkbox'>
                    <input
                      type='checkbox'
                      name='term'
                      id='haarpflege'
                      value='haarpflege'
                    />
                    Haarpflege
                  </label>

                  <label for='putzenwaschen' class='checkbox'>
                    <input
                      type='checkbox'
                      name='term'
                      id='putzenwaschen'
                      value='putzenwaschen'
                    />
