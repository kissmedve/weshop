                      <input type="checkbox" name="{{_id}}" id="drogerie" value="drogerie" />
                      Drogerie
                    </label>
                  </div>

                  <div class="column is-4">
                    <label class="tag-group"><strong>Lebensmittel</strong></label>
                    <label for='trockenvorraete' class="checkbox">
                      <input type="checkbox" name="{{_id}}" id="trockenvorraete" value="trockenvorraete" />
                      Trockenvorraete
                    </label>
                    <label for='nuessetrockenobst' class="checkbox">
                      <input type="checkbox" name="{{_id}}" id="nuessetrockenobst" value="nuessetrockenobst" />
                      Nüsse/Trockenobst
                    </label>

                    <label for='konserven' class="checkbox">
                      <input type="checkbox" name="{{_id}}" id="konserven" value="konserven" />
                      Konserven
                    </label>
                    <label for='brotaufstrich' class="checkbox">
                      <input type="checkbox" name="{{_id}}" id="brotaufstrich" value="brotaufstrich" />
